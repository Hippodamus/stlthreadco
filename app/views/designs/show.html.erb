<div id="bodymargin">
<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Score Designs', designs_path %></li>
    <li class="active">Design</li>
  </ol>

  <div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
     <%= image_tag @design.image.url(:medium) %>
    </div>
  </div>
  <div class="col-md-6">
    <h2><%= @design.name %></h2>
    <h4><%= @design.category %></h4>
    <p><%= @design.description %></p>
  </div>
  </div>

  <%= link_to 'Edit', edit_design_path(@design) %>

</div>
</div>