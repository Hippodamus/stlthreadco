<div class="container">
<div class="row">
  <div class="col-md-8"><h1>Let's score some T-shirt and hat designs, motherfucker!</h1><br>
    <%= link_to 'Submit Your Own', new_design_path, class: "btn btn-link" %>
  </div>
  <div class="col-md-4">
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
  </div>
</div>

<div class="row">
  <% @designs.each do |design| %>
    <div class="col-md-6">
      <div class="thumbnail">
        <%= image_tag design.image.url %>
        <div class="caption">
            <h3><%= design.name %></h3>
            <h4><%= design.category %></h4>
            <p><%= design.description %></p>
            <%= link_to 'Show', design %><br>
            <%= link_to 'Edit', edit_design_path(design) %><br>
            <%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %> 
        </div>     
      </div>   
    </div>
  <% end %>
</div>